{
  "name": "blog",
  "version": "1.0.0",
  "description": "blog of bshz",
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "postcss ./app/assets/styles --base ./app/assets/styles --dir ./app/styles --env production",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "postcss ./app/assets/styles --base ./app/assets/styles --dir ./app/styles --watch",
    "postinstall": "pnpm run compile-blog",
    "compile-blog": "node ./scripts/compile.mjs && node ./scripts/bundle.js",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bshzzhsb/blog.git"
  },
  "author": "bshz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bshzzhsb/blog/issues"
  },
  "homepage": "https://github.com/bshzzhsb/blog#readme",
  "dependencies": {
    "@codemirror/commands": "^6.0.1",
    "@codemirror/lang-css": "^6.0.0",
    "@codemirror/lang-html": "^6.1.0",
    "@codemirror/lang-javascript": "^6.0.2",
    "@codemirror/language": "^6.2.1",
    "@codemirror/state": "^6.1.1",
    "@codemirror/view": "^6.2.0",
    "@lezer/highlight": "^1.0.0",
    "@mapbox/rehype-prism": "^0.8.0",
    "@mdx-js/esbuild": "^2.0.0",
    "@metronome-sh/react": "^5.6.1",
    "@metronome-sh/vercel": "^5.6.1",
    "@remix-run/node": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "@remix-run/serve": "^1.6.8",
    "@remix-run/vercel": "^1.6.8",
    "@vercel/node": "^1.13.0",
    "framer-motion": "^6.2.8",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-frontmatter": "^4.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.8",
    "@types/lodash": "^4.14.178",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^10.4.1",
    "concurrently": "^7.0.0",
    "esbuild": "0.15.2",
    "eslint": "^8.7.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.0",
    "tailwindcss": "^3.0.8",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,md}": "prettier --config .prettierrc.js --write \"{app,scripts}/**/*.{js,ts,jsx,tsx,css,md}\""
  }
}
