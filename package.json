{
  "name": "blog",
  "version": "1.0.0",
  "description": "blog of bshz",
  "scripts": {
    "build": "pnpm run build:css && remix build",
    "build:css": "postcss ./app/assets/styles --base ./app/assets/styles --dir ./app/styles --env production",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\"",
    "dev:css": "postcss ./app/assets/styles --base ./app/assets/styles --dir ./app/styles --watch",
    "postinstall": "remix setup node && metronome setup && pnpm run compile-blog",
    "compile-blog": "node ./scripts/compile.mjs && node ./scripts/bundle.js",
    "type-check": "tsc --noEmit --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bshzzhsb/blog.git"
  },
  "author": "bshz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bshzzhsb/blog/issues"
  },
  "homepage": "https://github.com/bshzzhsb/blog#readme",
  "dependencies": {
    "@mapbox/rehype-prism": "^0.8.0",
    "@mdx-js/esbuild": "^2.0.0",
    "@remix-run/react": "^1.3.1",
    "@remix-run/serve": "^1.3.1",
    "@remix-run/server-runtime": "^1.3.1",
    "@remix-run/vercel": "^1.3.1",
    "@vercel/node": "^1.13.0",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "metronome-sh": "^1.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark-frontmatter": "^4.0.1",
    "remix": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.1",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "autoprefixer": "^10.4.1",
    "concurrently": "^7.0.0",
    "esbuild": "0.14.27",
    "eslint": "^8.7.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.8",
    "typescript": "^4.5.4"
  }
}
