{
  "name": "blog",
  "version": "1.0.0",
  "description": "blog of bshz",
  "scripts": {
    "build": "pnpm run build:css && node ./scripts/compile.mjs --env production && remix build",
    "build:css": "postcss ./app/assets/styles --base ./app/assets/styles --dir ./app/styles --env production",
    "dev": "concurrently \"pnpm run dev:css\" \"remix dev\" \"node ./scripts/compile.mjs\"",
    "dev:css": "postcss ./app/assets/styles --base ./app/assets/styles --dir ./app/styles --watch",
    "postinstall": "pnpm run compile-blog && pnpm run init-monaco-css",
    "compile-blog": "node ./scripts/compile-blog.mjs && node ./scripts/bundle.js",
    "init-monaco-css": "postcss ./node_modules/monaco-editor/min/vs/editor/editor.main.css --dir ./app/styles --env production",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bshzzhsb/blog.git"
  },
  "author": "bshz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bshzzhsb/blog/issues"
  },
  "homepage": "https://github.com/bshzzhsb/blog#readme",
  "dependencies": {
    "@lezer/highlight": "^1.0.0",
    "@mdx-js/esbuild": "^2.1.0",
    "@metronome-sh/react": "^5.6.1",
    "@metronome-sh/vercel": "^5.6.1",
    "@remix-run/node": "^1.14.3",
    "@remix-run/react": "^1.14.3",
    "@remix-run/serve": "^1.14.3",
    "@remix-run/vercel": "^1.14.3",
    "@rollup/browser": "^3.18.0",
    "@vercel/analytics": "^0.1.11",
    "@vercel/node": "^2.9.13",
    "@vercel/remix": "1.14.3-patch.1",
    "framer-motion": "^6.2.8",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.36.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "refractor": "^4.7.0",
    "remark-frontmatter": "^4.0.1",
    "unist-util-visit": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/standalone": "^7.19.5",
    "@babel/types": "^7.19.4",
    "@remix-run/dev": "^1.14.3",
    "@types/babel__core": "^7.1.19",
    "@types/babel__standalone": "^7.1.4",
    "@types/lodash": "^4.14.180",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "esbuild": "0.15.2",
    "eslint": "^8.11.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^2.6.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,css,md}": "prettier --config .prettierrc.js --write \"{app,scripts}/**/*.{js,ts,jsx,tsx,css,md}\""
  }
}
